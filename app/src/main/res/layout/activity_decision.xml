<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAsh"
    tools:context=".Decision">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/ig_app">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="100dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Want to be a donor?"
                android:textSize="25sp"
                android:textColor="@color/colorWhite"
                android:layout_marginVertical="20dp"
                android:gravity="center"
                android:layout_gravity="center" />

            <Button
                android:id="@+id/btn_positive"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/green_rounded_rectangle"
                android:text="Yes, i'm in."
                android:textSize="20sp"
                android:textColor="@color/colorBlack"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp" />

            <Button
                android:id="@+id/btn_negative"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/primary_rounded_rectangle"
                android:text="No, thanks."
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp" />
        </LinearLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>