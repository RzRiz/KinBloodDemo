<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAsh"
    android:orientation="vertical"
    tools:context=".NotificationActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent">

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:background="@color/colorYellowWhite"
            android:theme="@style/Theme.AppCompat.Light.DarkActionBar"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

            <ImageView
                android:id="@+id/iv_home2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_home"
                android:tint="@color/colorPrimary"
                android:padding="10dp"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/app_name"
                android:textColor="@color/colorBlack"
                android:textSize="30sp"
                android:drawableStart="@drawable/ic_app_logo_40dp"
                android:paddingHorizontal="10dp"/>
        </androidx.appcompat.widget.Toolbar>
    </com.google.android.material.appbar.AppBarLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingVertical="20dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Current Address"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginHorizontal="20dp" />

            <EditText
                android:id="@+id/et_current_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutAppearance"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:hint="eg: Londoni road, Ambarkhana, Sylhet"
                android:layout_marginHorizontal="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home District"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />

            <EditText
                android:id="@+id/et_home_district"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutAppearance"
                android:inputType="text"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginHorizontal="20dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date of Birth:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/btn_bday"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=" dd / mm / yyyy"
                    android:textSize="20sp"
                    android:textColor="@color/colorYellowWhite"
                    android:background="@drawable/transparent_red_rounded_rectangle"
                    android:paddingHorizontal="10dp"
                    android:layout_marginStart="10dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginStart="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gender:"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <RadioGroup
                    android:id="@+id/rgGender"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginStart="20dp">

                    <RadioButton
                        android:id="@+id/rb_male"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Male"
                        android:textSize="20sp"
                        android:textColor="@color/colorYellowWhite"
                        android:buttonTint="@color/colorWhite"
                        android:paddingHorizontal="10dp" />

                    <RadioButton
                        android:id="@+id/rb_female"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Female"
                        android:textSize="20sp"
                        android:textColor="@color/colorYellowWhite"
                        android:buttonTint="@color/colorWhite"
                        android:paddingHorizontal="10dp" />
                </RadioGroup>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Blood Group: "
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/tv_selectedBlood"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Not Selected"
                    android:textColor="@color/colorWhite"
                    android:textSize="20sp" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="(Click the blood icon to select)"
                android:textColor="@color/colorYellowWhite"
                android:textSize="15sp"
                android:layout_marginHorizontal="30dp"/>

            <com.hitomi.cmlibrary.CircleMenu
                android:id="@+id/circleMenu"
                android:layout_width="match_parent"
                android:layout_height="300dp"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Occupation"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginHorizontal="20dp" />

            <EditText
                android:id="@+id/et_occupation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutAppearance"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginHorizontal="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Institute"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />

            <EditText
                android:id="@+id/et_institute"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutAppearance"
                android:inputType="textMultiLine"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:layout_marginHorizontal="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Have you donated blood before?"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />

            <RadioGroup
                android:id="@+id/rgDonated_before"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <RadioButton
                    android:id="@+id/rbDonate_Positive"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yes"
                    android:textSize="20sp"
                    android:textColor="@color/colorYellowWhite"
                    android:buttonTint="@color/colorWhite"
                    android:paddingHorizontal="10dp" />

                <RadioButton
                    android:id="@+id/rbDonate_Negative"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No"
                    android:textSize="20sp"
                    android:textColor="@color/colorYellowWhite"
                    android:buttonTint="@color/colorWhite"
                    android:paddingHorizontal="10dp" />
            </RadioGroup>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="If so, then how many times?"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />

            <EditText
                android:id="@+id/et_donate_times"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:theme="@style/TextInputLayoutAppearance"
                android:inputType="number"
                android:textSize="18sp"
                android:textColor="@color/colorWhite"
                android:enabled="false"
                android:layout_marginHorizontal="20dp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="When did you last donate blood?"
                android:textColor="@color/colorWhite"
                android:textSize="20sp"
                android:layout_marginTop="15dp"
                android:layout_marginHorizontal="20dp" />

            <Button
                android:id="@+id/btn_ldblood"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=" dd / mm / yyyy"
                android:textSize="20sp"
                android:textColor="@color/colorYellowWhite"
                android:background="@drawable/transparent_red_rounded_rectangle"
                android:enabled="false"
                android:paddingHorizontal="10dp"
                android:layout_gravity="center"/>

            <Button
                android:id="@+id/btn_register"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/primary_rounded_rectangle"
                android:text="register"
                android:textSize="20sp"
                android:textColor="@color/colorWhite"
                android:layout_marginTop="20dp"
                android:layout_marginHorizontal="50dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>