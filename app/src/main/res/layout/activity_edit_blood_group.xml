<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".EditBloodGroup">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Blood Group"/>

    <RadioGroup
        android:id="@+id/rg_positive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_Apositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="A+"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_Bpositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="B+"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_ABpositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="AB+"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_Opositive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="O+"
            android:textSize="20sp" />


    </RadioGroup>

    <RadioGroup
        android:id="@+id/rg_negative"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_Anegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="A-"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_Bnegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="B-"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_ABnegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="AB-"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/rb_Onegetive"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="O-"
            android:textSize="20sp" />

    </RadioGroup>

    <Button
        android:id="@+id/btn_update_blood_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="update blood group"/>

    <ProgressBar
        android:id="@+id/progress_blood_group"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"/>

</LinearLayout>